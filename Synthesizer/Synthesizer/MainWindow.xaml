<Controls:MetroWindow x:Name="metroWindow" x:Class="Synthesizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:vm="clr-namespace:Synthesizer.ViewModel"
        xmlns:local="clr-namespace:Synthesizer"
        mc:Ignorable="d"             
        Title="Synthesizer" Height="426" Width="587" DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Window.Resources>
        <Style x:Key="recordButtonStyle" >
            <Setter Property="Control.Height" Value="25"></Setter>
            <Setter Property="Control.Width" Value="25"></Setter>
        </Style>
        <Style x:Key="BlackKeyStyle">
            <Setter Property="Control.Height" Value="{Binding DataContext.BlackKeyHeight, ElementName=metroWindow}"></Setter>
            <Setter Property="Control.Width" Value="{Binding DataContext.BlackKeyWidth, ElementName=metroWindow}"></Setter>
        </Style>
        <Style x:Key="WhiteKeyStyle">
            <Setter Property="Control.Height" Value="{Binding DataContext.WhiteKeyHeight, ElementName=metroWindow}"></Setter>
            <Setter Property="Control.Width" Value="{Binding DataContext.WhiteKeyWidth, ElementName=metroWindow}"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid HorizontalAlignment="Left" Height="120" Margin="10,10,0,0" VerticalAlignment="Top" Width="236">
            <Image Source="ImageResources/pause.jpg"></Image>
        </Grid>
        <Grid Height="120" Margin="10,10,10,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="recordButton" VerticalAlignment="Top" Margin="0,20,0,0" Style="{StaticResource recordButtonStyle}">

                <Button.Template>
                    <ControlTemplate  TargetType="Button">
                        <Grid>
                            <Image  Source="ImageResources/record.jpg"/>
                            <Ellipse Fill="Transparent" Stroke="Black" ></Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="stopButton" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource recordButtonStyle}">
                <Button.Template>
                    <ControlTemplate  TargetType="Button">
                        <Grid>
                            <Image  Source="ImageResources/stop.jpg"/>
                            <Ellipse Fill="Transparent" Stroke="Black" ></Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="pauseButton"  Margin="0,0,0,20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Style="{StaticResource recordButtonStyle}">
                <Button.Template>
                    <ControlTemplate  TargetType="Button">
                        <Grid>
                            <Image  Source="ImageResources/pause.jpg"/>
                            <Ellipse Fill="Transparent" Stroke="Black" ></Ellipse>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Grid Height="120" Width="200" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button x:Name="PianoMode" Content="Piano&#xD;&#xA;Mode" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" Width="76" Height="64" Background="White"/>
            <Button x:Name="GuitarMode" Content="Guitar&#xA;Mode" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Center" Width="76" Height="64" Background="White"/>
        </Grid>
        <Grid Margin="10" VerticalAlignment="Bottom" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible">
            <ListBox Margin="10" ItemsSource="{Binding Path=WhiteKeys}" HorizontalAlignment="Left" VerticalAlignment="Top"
                         ScrollViewer.CanContentScroll="False">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal">
                        </StackPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button x:Name="whiteKey" Style="{StaticResource WhiteKeyStyle}"  Margin="0" VerticalAlignment="Top"
                           HorizontalAlignment="Left" ClickMode="Press" Command="{Binding Path=Play}">
                            <Button.Background>
                                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                    <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                    <GradientStop Color="#FFDDDDDD" Offset="0.856"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                        </Button>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox ItemsSource="{Binding Path=BlackKeys}" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                        <Button x:Name="blackKey" VerticalAlignment="Top" Style="{StaticResource BlackKeyStyle}" 
                                Margin="{Binding DataContext.GetMargin, ElementName=metroWindow}"
                            HorizontalAlignment="Left" Command="{Binding Path=Play}">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                        <GradientStop Color="#FF272727" Offset="0"/>
                                        <GradientStop Color="#FF343434" Offset="0.83"/>
                                        <GradientStop Color="Black" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
    </Grid>
</Controls:MetroWindow>
