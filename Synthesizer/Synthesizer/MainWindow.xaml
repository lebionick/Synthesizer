<Controls:MetroWindow x:Name="metroWindow" x:Class="Synthesizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:vm="clr-namespace:Synthesizer.ViewModel"
        xmlns:local="clr-namespace:Synthesizer"
        mc:Ignorable="d"             
        Title="MainWindow" Height="426" Width="587" DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="120" Margin="10,10,0,0" VerticalAlignment="Top" Width="236"/>
        <Grid Height="120" Margin="246,10,10,0" VerticalAlignment="Top">
            <Button x:Name="button6" Content="Piano&#xD;&#xA;Mode" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="76" Height="64" Background="White" Click="button6_Click"/>
            <Button x:Name="button6_Copy" Content="Guitar&#xA;Mode" HorizontalAlignment="Left" Margin="137,29,0,0" VerticalAlignment="Top" Width="76" Height="64" Background="White" Click="button6_Copy_Click"/>
        </Grid>

        <ListBox Margin="10,130,10,10" ItemsSource="{Binding Path=WhiteKeys}" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" ScrollViewer.CanContentScroll="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="whiteKey" Height="165" Width="40" Margin="0" Command="{Binding Path=Play}"
                           HorizontalAlignment="Left" ClickMode="Press">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="#FFF3F3F3" Offset="0"/>
                                <GradientStop Color="#FFEBEBEB" Offset="0.5"/>
                                <GradientStop Color="#FFDDDDDD" Offset="0.856"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Margin="10,130,10,10" ItemsSource="{Binding Path=BlaсkKeys}" Opacity="0.5"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button x:Name="blackKey" Margin="10,0,0,0" VerticalAlignment="Top" Height="90" 
                            HorizontalAlignment="Left" Width="30">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                                <GradientStop Color="#FF272727" Offset="0"/>
                                <GradientStop Color="#FF343434" Offset="0.83"/>
                                <GradientStop Color="Black" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Controls:MetroWindow>
